<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img_login"
        android:layout_marginTop="32dp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/login_image"/>

    <ImageView
        android:id="@+id/btn_login_naver"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:src="@drawable/naver_login_img"
        android:layout_marginTop="54dp"
        android:layout_below="@id/img_login"/>

    <ImageView
        android:id="@+id/btn_login_facebook"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:src="@drawable/facebook_login_img"
        android:layout_marginVertical="8dp"
        android:layout_below="@id/btn_login_naver"/>

    <ImageView
        android:id="@+id/btn_login_kakao"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:src="@drawable/kakao_login_img"
        android:layout_below="@id/btn_login_facebook"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_comment"
        android:textAlignment="center"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/color_black"
        android:layout_below="@id/btn_login_kakao"/>

    <TextView
        android:id="@+id/login_delay_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="@string/login_delay"
        android:textStyle="bold"
        android:clickable="true"
        android:textColor="@color/color_black"
        android:textSize="16sp"/>


</RelativeLayout>